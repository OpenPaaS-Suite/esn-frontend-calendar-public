doctype html
html.loading
  head
    meta(charset='utf8')
    base(href='/')
    title Calendar Public - OpenPaas
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="theme-color", content="#0C7CD5")
    style(type='text/css').
      html.loading, html.loading body, html.loading body {
        padding: 0;
        margin: 0;
      }
      ul {
        list-style: none;
      }
      .loading-spa-icon {
        animation: bounce 2s;
        animation-iteration-count: infinite;
      }

      @keyframes bounce {
        0%,
        25%,
        50%,
        75%,
        100% {
          transform: translateY(0);
        }
        40% {
          transform: translateY(-20px);
        }
        60% {
          transform: translateY(-12px);
        }
      }
  body(ng-app='esn.calendar.event-consultation')
    header#header.event-consultation
      div.header-inner.flex-vertical-centered.flex-space-between
        ul.list-inline.all-centered
          li.logo
            a(href='#')
              img.openpaas-logo(ng-src="/images/white-logo.svg", fallback-src="/images/white-logo.svg", src="/images/white-logo.svg", alt="{{ 'OpenPaas Logo' | translate }}")
    .consultation-body(ng-view, ng-cloak)
      include ../src/app/app-loading.pug
    script(src="/excal/env/openpaas.js")
