doctype html
html.loading
  head
    meta(charset='utf8')
    base(href='/')
    title Calendar Public - OpenPaas
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="theme-color", content="#0C7CD5")
    style(type='text/css').
      html.loading, html.loading body, html.loading body {
        padding: 0;
        margin: 0;
      }
      ul {
        list-style: none;
      }

  body(ng-app='esn.calendar.event-consultation')
    header#header.event-consultation
      div.header-inner.flex-vertical-centered.flex-space-between
        ul.list-inline.all-centered
          li.logo
            a(href='#')
              img.openpaas-logo(ng-src="/white-logo.svg", fallback-src="/images/white-logo.svg", src="/white-logo.svg", alt="{{ 'OpenPaas Logo' | translate }}")
    .consultation-body(ng-view, ng-cloak)
      include ../src/app/app-loading.pug